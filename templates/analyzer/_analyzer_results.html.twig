{% if error is defined %}
    <div class="alert alert-danger">{{ error }}</div>
{% else %}
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="card-title mb-1">Mots-clés pour votre campagne</h4>
                    <p class="text-muted">{{ productsCount }} produits analysés</p>
                </div>
                <a href="{{ path('app_keywords_finder') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Nouveau produit
                </a>
            </div>

            {{ form_start(form, {'action': path('app_create_bulksheet'), 'method': 'POST'}) }}

            <div class="row mb-3">
                <div class="col-md-3">
                    {{ form_row(form.asin) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.sku) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.campaignId) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.autobid) }}
                </div>
            </div>

            <h5 class="mt-4 mb-3">
                Mots-clés découverts ({{ form.keywords|length }})
            </h5>

            <div class="keywords-list">
                {% for keyword in form.keywords %}
                    <div class="keyword-row d-flex align-items-center gap-3 mb-2 p-2 border rounded"
                         data-index="{{ loop.index0 }}">

                        <div class="keyword-index text-muted" style="width: 30px;">
                            {{ loop.index }}
                        </div>

                        <div class="keyword-text flex-grow-1">
                            {{ form_row(keyword.text) }}
                        </div>

                        <div class="keyword-score" style="width: 100px;">
                            {{ form_row(keyword.score) }}
                        </div>

                        <div class="keyword-progress flex-grow-1">
                            <div class="progress" style="height: 16px;">
                                <div
                                    class="progress-bar"
                                    role="progressbar"
                                    style="width: {{ keyword.score.vars.value }}%">
                                </div>
                            </div>
                        </div>

                    </div>
                {% endfor %}
            </div>


            <div class="mt-4">
                {{ form_widget(form.submit) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>

