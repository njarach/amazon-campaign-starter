{% if error is defined %}
    <div class="alert alert-danger">{{ error }}</div>
{% else %}
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="card-title mb-1">Mots-clés pour votre campagne</h4>
                    <p class="text-muted">{{ productsCount }} produits analysés</p>
                </div>
                <a href="{{ path('app_keywords_finder') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Nouveau produit
                </a>
            </div>

            {{ form_start(form, {'action': path('app_create_bulksheet'), 'method': 'POST'}) }}

            <div class="row mb-3">
                <div class="col-md-3">
                    {{ form_row(form.asin) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.sku) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.campaignId) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.autobid) }}
                </div>
            </div>

            <h5 class="mt-4 mb-3">Mots-clés découverts ({{ form.keywords|length }})</h5>

            <div class="table-responsive">
                <table class="table table-hover" id="keywords-table">
                    <thead>
                    <tr>
                        <th style="width: 50px">#</th>
                        <th>Mot-clé</th>
                        <th style="width: 120px">Score</th>
                        <th style="width: 150px">Pertinence</th>
                        <th style="width: 100px">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for keyword in form.keywords %}
                        <tr data-index="{{ loop.index0 }}">
                            <td>{{ loop.index }}</td>
                            <td>{{ form_widget(keyword.text) }}</td>
                            <td>{{ form_widget(keyword.score) }}</td>
                            <td>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar"
                                         role="progressbar"
                                         style="width: {{ keyword.score.vars.value }}%">
                                    </div>
                                </div>
                            </td>
                            <td>
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger delete-keyword"
                                        data-index="{{ loop.index0 }}">
                                    Supprimer
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="mt-4">
                {{ form_widget(form.submit) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    <script>
        document.querySelectorAll('.delete-keyword').forEach(btn => {
            btn.addEventListener('click', function() {
                const row = this.closest('tr');
                const index = this.dataset.index;

                row.style.display = 'none';

                row.querySelectorAll('input').forEach(input => {
                    input.disabled = true;
                });
            });
        });
    </script>
{% endif %}
